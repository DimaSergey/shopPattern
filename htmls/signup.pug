extend base.pug
block content
	form(method="POST")
		input(type="text" placeholder="Please write your name" required name="name")
		input(type="text" placeholder="Please write tour surename" required name="surename")
		input(type="text" placeholder="Please write how we can call you" required name="username")
		input(type="email" placeholder="Please write your email" required name="email")
		input(type="password" placeholder="Please create your password" required name="password1")
		input(type="password" placeholder="Please write your password one more time" required name="password2")
		button(type="submit")
			|Sign up
